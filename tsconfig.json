{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "src",
    "paths": {
        "@config/*": ["config/*"],
        "@modules": ["modules/*"],
        "@models/*": ["models/*"],
        "@shared/*": ["shared/*"],
        "@utils/*": ["utils/*"]
    },     
    "resolveJsonModule": true,                      
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  }
}
